{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/chat/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/chat/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/chat",
  "projects": {
    "chat": {
      "type": "application",
      "root": "apps/chat",
      "entryFile": "main",
      "sourceRoot": "apps/chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "chatmessage": {
      "type": "application",
      "root": "apps/chatmessage",
      "entryFile": "main",
      "sourceRoot": "apps/chatmessage/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chatmessage/tsconfig.app.json"
      }
    },
    "chatroom": {
      "type": "application",
      "root": "apps/chatroom",
      "entryFile": "main",
      "sourceRoot": "apps/chatroom/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chatroom/tsconfig.app.json"
      }
    }
  }
}